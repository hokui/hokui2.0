<h1>Login</h1>

<%= form_tag url: '/login' do %>
  <div class="field">
    <%= label_tag :user_email, 'ELMSメールアドレス' %><br>
    <%= text_field_tag :user_email %>
  </div>

  <div class="field">
    <%= label_tag :password, 'パスワード' %><br>
    <%= password_field_tag %>
  </div>

  <div class="action">
    <%= submit_tag 'GO!' %>
  </div>
<% end %>
