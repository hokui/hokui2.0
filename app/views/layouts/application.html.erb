<!DOCTYPE html>
<html>
<head>
  <title><%= @page_title ? @page_title + ' - 北医ネット93' : '北医ネット93' %></title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <%= favicon_link_tag 'favicon.gif' %>
  <!--[if lt IE 9]>
  <script src="//html5shiv.googlecode.com/svn/trunk/html5.js"></script>
  <![endif]-->
</head>
<body>
  <div id="grobal-wrapper">

    <header id="grobal-header">
      <div id="grobal-header-banner">
        <%= image_tag 'banner.png', alt: 'page-top' %>
        <div id="grobal-header-user" class="btn-toolbar">
          <div class="btn-group">
            <% user_name = ( current_user ? current_user.user_handle_name : 'guest' ) %>
            <a class="btn dropdown-toggle" data-toggle="dropdown" href="#"><i class="icon-user-md"></i><%= user_name %><span class="caret"></span></a>
            <ul class="dropdown-menu">
              <li><%= link_to 'Edit user profile', '/edit_profile' %></li>
              <li><%= link_to 'Log Out', '/logout' %></li>
            </ul>
          </div>
        </div>
      </div>

      <nav id="grobal-header-menu">
        <ul>
          <li>
            <% if @index_page %>
              <%= link_to raw('<i class="icon-home"></i>Home'), '/',  class: "self_link" %>
            <% else %>
              <%= link_to raw('<i class="icon-home"></i>Home'), '/' %>
            <% end %>
          </li>
          <li>
            <% if @study_page %>
              <%= link_to raw('<i class="icon-book"></i>Study'), '/study',  class: "self_link" %>
            <% else %>
              <%= link_to raw('<i class="icon-book"></i>Study'), '/study' %>
            <% end %>
          </li>
          <li>
            <% if @calendar_page %>
              <%= link_to raw('<i class="icon-calendar"></i>Calendar'), '/calendar',  class: "self_link" %>
            <% else %>
              <%= link_to raw('<i class="icon-calendar"></i>Calendar'), '/calendar' %>
            <% end %>
          </li>
          <li>
            <% if @enquete_page %>
              <%= link_to raw('<i class="icon-thumbs-up"></i>Enquete'), '/enquete',  class: "self_link" %>
            <% else %>
              <%= link_to raw('<i class="icon-thumbs-up"></i>Enquete'), '/enquete' %>
            <% end %>
          </li>
          <li>
            <% if @bbs_page %>
              <%= link_to raw('<i class="icon-comments-alt"></i>BBS'), '/bbs',  class: "self_link" %>
            <% else %>
              <%= link_to raw('<i class="icon-comments-alt"></i>BBS'), '/bbs' %>
            <% end %>
          </li>
          <li>
            <% if @ml_page %>
              <%= link_to raw('<i class="icon-envelope"></i>freeML'), '/free-ml',  class: "self_link" %>
            <% else %>
              <%= link_to raw('<i class="icon-envelope"></i>freeML'), '/free-ml' %>
            <% end %>
          </li>
          <li>
            <% if @admin_page %>
              <%= link_to raw('<i class="icon-wrench"></i>Admin'), '/admin',  class: "self_link" %>
            <% else %>
              <%= link_to raw('<i class="icon-wrench"></i>Admin'), '/admin' %>
            <% end %>
          </li>
          <li>
            <% if @help_page %>
              <%= link_to raw('<i class="icon-question-sign"></i>Help'), '/help',  class: "self_link" %>
            <% else %>
              <%= link_to raw('<i class="icon-question-sign"></i>Help'), '/help' %>
            <% end %>
          </li>
        </ul>
      </nav>
    </header>

    <% if content_for?(:side) %>

      <div id="grobal-side">
        <%= yield(:side) %>
      </div>
      <div id="grobal-content">

        <% if flash[:error] %>
          <div id="flash-error" class="alert alert-error">
            <button class="close" data-dismiss="alert">×</button>
            <%= flash[:error] %>
          </div>
        <% end %>
        <% if flash[:warning] %>
          <div id="flash-error" class="alert alert-block">
            <button class="close" data-dismiss="alert">×</button>
            <%= flash[:warning] %>
          </div>
        <% end %>
        <% if flash[:info] %>
          <div id="flash-info" class="alert alert-info">
            <button class="close" data-dismiss="alert">×</button>
            <%= flash[:info] %>
          </div>
        <% end %>
        <% if flash[:success] %>
          <div id="flash-info" class="alert alert-success">
            <button class="close" data-dismiss="alert">×</button>
            <%= flash[:success] %>
          </div>
        <% end %>

        <%= yield(:content) %>
      </div>

    <% else %>

      <div id="grobal-full-width-content">

        <% if flash[:error] %>
          <div id="flash-error" class="alert alert-error">
            <button class="close" data-dismiss="alert">×</button>
            <%= flash[:error] %>
          </div>
        <% end %>
        <% if flash[:warning] %>
          <div id="flash-error" class="alert alert-block">
            <button class="close" data-dismiss="alert">×</button>
            <%= flash[:warning] %>
          </div>
        <% end %>
        <% if flash[:info] %>
          <div id="flash-info" class="alert alert-info">
            <button class="close" data-dismiss="alert">×</button>
            <%= flash[:info] %>
          </div>
        <% end %>
        <% if flash[:success] %>
          <div id="flash-info" class="alert alert-success">
            <button class="close" data-dismiss="alert">×</button>
            <%= flash[:success] %>
          </div>
        <% end %>

        <%= yield %>
      </div>

    <% end %>

    <footer id="grobal-footer">
      <address>
        Copyright 2011-2012 Hokui-Net Developer Team
      </address>
      <div id="grobal-footer-credits">
        <ul>
          <li id="grobal-footer-octocat">
            <%= link_to image_tag('octocat.png', alt: 'Find me on Github!'), 'http://github.com/iTakeshi/hokui2.0', target: '_blank', rel: 'tooltip', title: 'Find me on Github!' %>
          </li>
          <li id="grobal-footer-rails">
            <%= link_to image_tag('rails.png', alt: 'This application is built on Rails.'), 'http://rubyonrails.org/', target: '_blank', rel: 'tooptip', title: 'This application is built on Rails' %>
          </li>
        </ul>
      </div>
    </footer>

  </div>

</body>
</html>
