<h1>教科を追加</h1>

<%= form_for @subject, url: "/terms/#{@term.term_identifier}/subjects/new", html: { class: 'form-horizontal' } do |f| %>
  <% if @no_html_error %>
    <div id="error_explanation" class="alert alert-block alert-error">
      <a class="close" data-dismiss="alert" href="#">×</a>
      <h4 class="alert-heading">1個の項目にエラーがあります。</h4>
      <ul>
        <li>HTMLソースを貼りつけてください。</li>
      </ul>
    </div>
  <% end %>

  <fieldset>
    <div class="control-group">
      <%= label_tag :term_name, '学期', class: 'control-label' %>
      <div class="controls">
        <%= text_field_tag :term_name, @term.term_name, disabled: true %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :subject_syllabus_html, raw('大学シラバスページの<br>HTMLソース'), class: 'control-label' %>
      <div class="controls">
        <%= f.text_area :subject_syllabus_html, class: 'input-xlarge', size: '200x10' %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit '追加', class: 'btn btn-primary' %>
    </div>
  </fieldset>
<% end %>
